NODE_ENV=development
PORT=3019
MONGODB_URI=mongodb://localhost:27017/kycDB
# Comma-separated origins for CORS (include frontend URL)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Master admin key: required for KYC admin actions and for creating/listing/revoking API keys.
# Send in the X-Admin-Key request header.
# Use POST /admin/api-keys (with this key) to create additional API keys for admin auth.
ADMIN_API_KEY=your-secret-admin-key

# Email (optional): for KYC status change notifications. Pass notifyEmail in approve/reject body to send.
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@yourdomain.com

# Webhook (optional): POST KYC status changes (approved/rejected) to this URL.
# KYC_WEBHOOK_URL=https://your-system.com/webhook/kyc
